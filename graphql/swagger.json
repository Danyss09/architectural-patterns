{
  "swagger": "2.0",
  "info": {
    "title": "GraphQL Hello World",
    "description": "This GraphQL endpoint returns a hello world message",
    "version": "1.0.0"
  },
  "paths": {
    "/graphql": {
      "post": {
        "summary": "Sends a hello world message",
        "parameters": [
          {
            "in": "body",
            "name": "query",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "query": {
                  "type": "string",
                  "example": "{ hello }"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Response with the hello world message",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "object",
                  "properties": {
                    "hello": {
                      "type": "string",
                      "example": "Hello World, my name is Daniela CÃ¡ceres!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
